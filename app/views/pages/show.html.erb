<%= link_to("<< Back to List", pages_path, :class => 'back-link') %>

<div class="Pages show">
  <h2>Show Page</h2>

  <table summary="Page detail view">
    <tr>
      <th>Subject Name</th>
      <td><%= @page.subject[:name] %></td>
    </tr>
    <tr>
      <th>Page Name</th>
      <td><%= @page.name%></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @page.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
    <tr>
      <th>PermaLink</th>
      <td><%= @page.permalink%></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @page.content%></td>
    </tr>
    <tr>
    <tr>
      <th>Created</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>
  </table>

</div>
