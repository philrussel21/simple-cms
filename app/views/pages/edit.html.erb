<%= link_to("<< Back to List", subject_path(params[:id]), :class => 'back-link') %>

<div class="pages edit">
  <h2>Edit Page</h2>

  <%= form_for(@edit_page, :url => subject_page_path) do |f| %>
    <%# :url and :method can be left out and Rails would still know what to do with the newly
    # created object.%>
       
       
       <%= render(:partial =>'form', :locals => {:f => f})%>


    <div class="form-buttons">
      <%= f.submit("Update Page") %>
    </div>

  <% end %>
</div>
